FROM ubuntu:20.04

RUN apt-get update -y && \
    apt-get install -y python3-pip iputils-ping

COPY ./requirements.txt /requirements.txt

WORKDIR /

RUN pip3 install --upgrade pip

RUN pip3 install -r requirements.txt

COPY . /

ENTRYPOINT [ "python3" ]

CMD [ "metal_ping_disco_data_runner.py" ]